<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="day_title_text" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="dialog_theme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/theme_background_accent2</item>
        <item name="android:textColor">@color/theme_secondary</item>
    </style>

    <style name="choose_tag_color" parent="TextAppearance.AppCompat">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="Style.App.circleImageView" parent="">
        <item name="shapeAppearance">@style/ShapeAppearanceOverlay.App.circleImageView</item>
    </style>

    <!-- https://stackoverflow.com/questions/66624415/shapeableimageview-doesnt-round-corners -->
    <style name="ShapeAppearanceOverlay.App.circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>